<h1>Tarefa dia 11/03</h1>
<form id="form">
    <label for="weather">Selecione o clima de hoje </label>
    <select id="weather">
    <option value="">Escolha</option>
    <option value="sunny">Ensolarado</option>
    <option value="rainy">Chuvoso</option>
    <option value="snowing">Nevando</option>
    <option value="overcast">Nublado</option>
    </select>

    <button>Enviar</button>
</form>

<div id="result"></div>

<script>
    var select = document.querySelector('select');
    var para = document.querySelector('p');

function choice(event){
    event.preventDefault()

    var choice = select.value;

    if (choice === 'sunny') {
        result.innerHTML = '<br>O dia hoje est√° ensolarado!';
    } else if (choice === 'rainy') {
        result.innerHTML = '<br>O dia hoje esta chuvoso!';
    } else if (choice === 'snowing') {
        result.innerHTML = '<br>Hoje esta nevando';
    } else if (choice === 'overcast') {
        result.innerHTML = '<br>O dia hoje esta nublado';
    } else {
        result.innerHTML = '';
    }
}

form.addEventListener('submit', choice)
</script>

